# Production Environment Configuration Template
# Copy this to .env and configure with your actual values

# Database Configuration
POSTGRES_DB=triply_prod
POSTGRES_USER=triply
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Redis Configuration  
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# API Keys (obtain from respective providers)
OPENAI_API_KEY=sk-your_openai_api_key_here
WEATHER_API_KEY=your_openweathermap_api_key_here

# JWT Configuration (generate with scripts/generate-jwt-keys.sh)
JWT_PRIVATE_KEY_PEM="-----BEGIN RSA PRIVATE KEY-----\nMIIEowIBAAKCAQEA...\n-----END RSA PRIVATE KEY-----"
JWT_PUBLIC_KEY_PEM="-----BEGIN PUBLIC KEY-----\nMIIBIjANBgkqhkiG9w0B...\n-----END PUBLIC KEY-----"

# Frontend Configuration
UI_ORIGIN=https://your-domain.com
FRONTEND_PORT=8501

# Backend Configuration  
BACKEND_PORT=8000

# MCP Configuration
MCP_WEATHER_ENDPOINT=http://mcp-weather:3001
MCP_ENABLED=true
MCP_PORT=3001

# Security Settings
JWT_ACCESS_TTL_MINUTES=15
JWT_REFRESH_TTL_DAYS=7
PASSWORD_MIN_LENGTH=8
LOCKOUT_THRESHOLD=5
LOCKOUT_DURATION_MINUTES=5

# Performance Settings
FANOUT_CAP=4
WEATHER_TTL_HOURS=24

# Production Settings (uncomment for production)
# HTTP_PORT=80
# HTTPS_PORT=443
